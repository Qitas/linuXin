#!/bin/bash

export WorkPath=`pwd`

## Root Password
for ((i = 0; i < 5; i++)); do
	PASSWD=$(whiptail --title "init ubuntu System" \
		--passwordbox "Enter root password. Don't use root or sudo run it" \
		10 60 3>&1 1>&2 2>&3)
	if [ $i = "4" ]; then
		whiptail --title "Note REX" --msgbox "Error, Invalid password" 10 40 0	
		exit 0
	fi

	sudo -k
	if sudo -lS &> /dev/null << EOF
$PASSWD
EOF
	then
		i=10
	else
		whiptail --title "init ubuntu System" --msgbox "Invalid password, Pls input corrent password" \
		10 40 0	--cancel-button Exit --ok-button Retry
	fi
done

echo $PASSWD | sudo ls &> /dev/null 2>&1



OPTION=$(whiptail --title "init ubuntu init System" \
	--menu "$MENUSTR" 20 60 12 --cancel-button Finish --ok-button Select \
	"0"   "auto init all" \
	"1"   "driver init" \
	"2"   "system init" \
	"3"   "source init" \
	3>&1 1>&2 2>&3)
	

if [ $OPTION = '0' ]; then
	clear
	echo "start auto all\n${Line}"
	exit 0
elif [ $OPTION = '1' ]; then
	clear
	echo "start driver init\n${Line}"
	chmod +x ./apt/apt.sh
	sudo ./apt/apt.sh # > getSRC.log
	exit 0	
elif [ $OPTION = '2' ]; then
	clear
	echo "start system init\n${Line}"
	exit 0
elif [ $OPTION = "3" ]; then
	clear
	echo "start source init\n${Line}"
	exit 0
else
	whiptail --title "init ubuntu System" \
		--msgbox "Please select correct option" 10 50 0
	exit 0
fi



exit 0
